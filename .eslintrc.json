{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true,
		"mocha": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": ["error", "tab"],
		"semi": ["error", "always"],
    "operator-linebreak": ["error", "after"],
    "function-paren-newline": ["error", "never"],
    "function-call-argument-newline": ["error", "never"]
	}
}
